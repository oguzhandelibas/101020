//RUN THIS CODE

import turtle

screen = turtle.Screen()
screen.setup(600, 600)
screen.bgcolor("white")

pen = turtle.Turtle()
pen.speed(5)

pen.penup()
pen.goto(0, -200)
pen.pendown()
pen.color("red")
pen.begin_fill()
pen.left(140)
pen.forward(224)

for _ in range(200):
    pen.right(1)
    pen.forward(2)
pen.left(120)

for _ in range(200):
    pen.right(1)
    pen.forward(2)
pen.forward(224)
pen.end_fill()
